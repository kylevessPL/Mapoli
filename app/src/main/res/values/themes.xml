<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Mapoli" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/chateau_green_500</item>
        <item name="colorPrimaryVariant">@color/chateau_green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/shakespeare_200</item>
        <item name="colorSecondaryVariant">@color/shakespeare_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Mapoli.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mapoli.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mapoli.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
