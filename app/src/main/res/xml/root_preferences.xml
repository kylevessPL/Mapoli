<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/appearance">

        <SwitchPreferenceCompat
            android:icon="@drawable/ic_baseline_dark_mode_24"
            app:key="dark_mode"
            app:title="@string/dark_mode" />

        <ListPreference
            android:icon="@drawable/ic_baseline_translate_24"
            app:defaultValue="english"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="meters"
            app:entries="@array/units_entries"
            app:entryValues="@array/units_values"
            app:key="units"
            app:title="@string/units"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/other">

        <EditTextPreference
            android:icon="@drawable/ic_baseline_bug_report_24"
            android:singleLine="true"
            app:key="report_a_bug"
            app:title="@string/report_a_bug" />

        <Preference
            android:icon="@drawable/ic_baseline_info_24"
            android:singleLine="true"
            app:key="about"
            app:title="@string/about" />

    </PreferenceCategory>

</PreferenceScreen>